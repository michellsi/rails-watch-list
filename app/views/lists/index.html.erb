<%= render 'banner' %>

<div class="container m-3 p-3">
  <h2>My movie lists <%= link_to "Create a movie list", new_list_path, class: "btn btn-dark"  %> </h2>

    <div class="cards">
      <% @lists.each do |list| %>
        <a class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fit %>');" href="<%= list_path(list) %>">
          <%= list.name %>
        </a>
      <% end  %>
    </div>
</div>
